<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event, url: newevent_path) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :place %>
      <%= f.text_field :place %>

      <%= f.label :organizer %>
      <%= f.text_field :organizer %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Crear un evento", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>